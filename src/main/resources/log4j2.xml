<?xml version="1.0" encoding="UTF-8"?>
<Configuration xmlns="http://logging.apache.org/log4j/2.0/config"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="https://raw.githubusercontent.com/apache/logging-log4j2/log4j-2.17.2/log4j-core/src/main/resources/Log4j-config.xsd">
	<Appenders>
		<Console name="Console" target="SYSTEM_OUT">
			<PatternLayout
				pattern="%d{HH:mm:ss.SSS} %-5level - %msg%rEx{short}%n" />
		</Console>
		<Console name="ConsoleDebug" target="SYSTEM_OUT">
			<PatternLayout
				pattern="%d{HH:mm:ss.SSS} %-5level %logger{1} - %msg%n" />
		</Console>
	</Appenders>
	<Loggers>
		<!-- <Logger name="org.reflections.Reflections" level="error"/> -->
		<Root level="info">
			<AppenderRef ref="Console" />
		</Root>
		<Logger name="org.reflections" level="OFF"/>
	</Loggers>
</Configuration>